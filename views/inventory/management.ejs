<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if (error.msg !== "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <% }) %>
    </ul>
<% } %>

<ul>
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Inventory</a></li>
</ul>

<h2>Manage Inventory</h2>
<p>Please select a classification from the list to view the items associated with it.</p>

<select id="classificationList">
    <option value="" disabled selected>Please select</option>
    <% classificationList.forEach(function(classification) { %>
      <option value="<%= classification.id %>"><%= classification.name %></option>
    <% }); %>
</select>

<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>